<div class="hero-bg">
  <div class="dark-gradient">
    <div class="card-img-overlay">
      <div class="search-section w-50 mx-auto">
        <h2 class="text-center font-weight-bold text-white">Search Instrument</h2>
        <%= search_form_for @q, url: :instruments do |f| %>
          <div class="input-group mb-3 search-input">
            <%= f.search_field :name_or_category_name_cont, class: "form-control", placeholder: "Serach Instruments" %>
            <div class="input-group-append">
              <%= f.submit class: "input-group-text bg-dark text-white pl-4 pr-5" do %>
                Search
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
